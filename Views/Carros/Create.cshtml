@model AppTaxi.Models.Carro

@{
    ViewData["Title"] = "Create";
}

<h2>Registar um Novo Carro</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotoristaID" class="control-label"></label>
                <select asp-for="MotoristaID" class ="form-control" asp-items="ViewBag.MotoristaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CobradorID" class="control-label"></label>
                <select asp-for="CobradorID" class ="form-control" asp-items="ViewBag.CobradorID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Novo Carro" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
