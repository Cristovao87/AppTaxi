@model AppTaxi.Models.Motorista

@{
    ViewData["Title"] = "Edit";
}

<h2>Actualizar Registo de um Motorista</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MotoristaID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BI" class="control-label"></label>
                <input asp-for="BI" class="form-control" />
                <span asp-validation-for="BI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar Motorista" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
