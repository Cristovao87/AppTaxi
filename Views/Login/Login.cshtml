
@{
    ViewData["Title"] = "Login";
}

<br />
<body class="hold-transition login-page">
    <div class="content-wrapper">
        <div class="row">
            <div class="login-box col-4">
                <div class="login-logo">
                    <a href="#"><b>Taxi</b>Pay | Login</a>
                </div>
                <!-- /.login-logo -->
                <div class="card">
                    <div class="card-body login-card-body">
                        <p class="login-box-msg">Faça login para entrar no sistema</p>

                        <form action="#" method="post">
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" placeholder="Email">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" placeholder="Password">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <div class="icheck-primary">
                                        <input type="checkbox" id="remember">
                                        <label for="remember">
                                            Lembrar Me
                                        </label>
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-4">
                                    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                                </div>
                                <!-- /.col -->
                            </div>
                        </form>

                        <div class="social-auth-links text-center mb-3">
                            <p>- OU -</p>
                            <a href="#" class="btn btn-block btn-primary">
                                <i class="fab fa-facebook mr-2"></i> Entrar com Facebook
                            </a>
                            <a href="#" class="btn btn-block btn-danger">
                                <i class="fab fa-google-plus mr-2"></i> Entrar com Google+
                            </a>
                        </div>
                        <!-- /.social-auth-links -->

                        <p class="mb-1">
                            <a href="forgot-password.html">Esquece minha password</a>
                        </p>
                        <p class="mb-0">
                            <a href="register.html" class="text-center">Novo registo</a>
                        </p>
                    </div>
                    <!-- /.login-card-body -->
                </div>
            </div><!-- /.login-box -->

            <div class="col-8 text-center card-body login-card-bod">
                <img src="~/images/login-taxipay.png" alt="IMG">
            </div>
        </div>
    </div> <!-- /.content-wrapper-->
    </body>





